<ContentDialog x:Class="Yugen.Mosaic.Uwp.Controls.WhatsNewDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:Yugen.Mosaic.Uwp.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--<ContentDialog.TitleTemplate>
        <DataTemplate x:DataType="x:String">
            <StackPanel Orientation="Horizontal">
                <Image Height="40"
                       Width="40"
                        Source="ms-appx:///Assets/StoreLogo.png" />
                <TextBlock Margin="12,0,0,0"
                           Text="{x:Bind}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>-->

    <StackPanel>

        <Grid>
            <Image Height="40"
                   Width="40"
                   HorizontalAlignment="Left"
                   Margin="8,0,0,0"
                   Source="ms-appx:///Assets/StoreLogo.png" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="60,0,0,0"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Text="{x:Bind ViewModel.Title}" />
            <Button Command="{x:Bind HideCommand}"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Style="{StaticResource SoftRevealButtonStyle}">
                <FontIcon Glyph="" />
            </Button>
        </Grid>

        <ScrollViewer Padding="16">
            <StackPanel>
                <TextBlock Text="{x:Bind ViewModel.Body}"
                           TextWrapping="WrapWholeWords" />
            </StackPanel>
        </ScrollViewer>

    </StackPanel>
</ContentDialog>
